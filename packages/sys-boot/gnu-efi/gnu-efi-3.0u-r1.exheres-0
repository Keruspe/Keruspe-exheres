require sourceforge [ pnv=${PN}_${PV}.orig suffix=tar.gz ]

SUMMARY="Library to create EFI executables"
DESCRIPTION="
Develop EFI applications for IA-64 (IPF), IA-32 (x86) , and x86_64 platforms using the GNU toolchain
and the EFI development environment.
"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    build:
        sys-apps/pciutils
"

WORK="${WORKBASE}/${PNV%u}"

DEFAULT_SRC_COMPILE_PARAMS=( ARCH=x86_64 LIBDIR=/usr/${LIBDIR} PREFIX=/usr )
DEFAULT_SRC_INSTALL_PARAMS=( ARCH=x86_64 LIBDIR=/usr/${LIBDIR} PREFIX=/usr INSTALLROOT="${IMAGE}" )

src_prepare() {
    default
    edo sed -e 's: -DGNU_EFI_USE_MS_ABI::' -i Make.defaults
}

